import java.awt.BorderLayout;
import java.awt.Dimension;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JSlider;

@SuppressWarnings("all")
public class Window extends JPanel{
	private JFrame frame;
	//private Controller controller;
	
	
	public Window() {
		super();
		
		frame = new JFrame();
		frame.getContentPane().add(this, BorderLayout.CENTER);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		
		JSlider direction = new JSlider(JSlider.VERTICAL,
                -100, 100, 0);
		direction.setMajorTickSpacing(50);
		direction.setMinorTickSpacing(10);
		direction.setPaintTicks(true);
		direction.setPaintLabels(true);
		this.add(direction);
		
		JSlider speed = new JSlider(JSlider.HORIZONTAL,
                -100, 100, 0);
		speed.setMajorTickSpacing(50);
		speed.setMinorTickSpacing(10);
		speed.setPaintTicks(true);
		speed.setPaintLabels(true);
		this.add(speed);
		
		frame.setSize(500,500);
		frame.setVisible(true);
	}
}
